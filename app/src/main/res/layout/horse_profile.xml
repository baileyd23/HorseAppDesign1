<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#586E61"
    android:backgroundTint="#586E61">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="314dp"
        android:layout_height="53dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="24dp"
        android:text="Horse Profile"
        android:textColor="#33032F"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button5"
        android:layout_width="152dp"
        android:layout_height="118dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        android:text="FEEDING SCHEDULE"
        android:backgroundTint="#A0ACAD"
        android:textColor="#33032F"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="152dp"
        android:layout_height="118dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        android:text="HORSE WELFARE"
        android:backgroundTint="#A0ACAD"
        android:textColor="#33032F"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/button7"
        android:layout_width="152dp"
        android:layout_height="118dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:text="REMINDERS"
        android:backgroundTint="#A0ACAD"
        android:textColor="#33032F"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <Button
        android:id="@+id/button8"
        android:layout_width="152dp"
        android:layout_height="118dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:text="PROFILE MANAGEMENT"
        android:backgroundTint="#A0ACAD"
        android:textColor="#33032F"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/button9"
        android:layout_width="152dp"
        android:layout_height="118dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        android:text="EXERCISE TRACKING"
        android:backgroundTint="#A0ACAD"
        android:textStyle="bold"
        android:textColor="#33032F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />
</androidx.constraintlayout.widget.ConstraintLayout>