<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#586E61"
    android:backgroundTint="#586E61">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="288dp"
        android:layout_height="63dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="32dp"
        android:text="Details"
        android:textColor="#33032F"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="329dp"
        android:layout_height="71dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="128dp"
        android:text="New Reminder"
        android:textColor="#33032F"
        android:textColorHint="#33032F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText6"
        android:layout_width="329dp"
        android:layout_height="71dp"
        android:layout_marginTop="15dp"
        android:text="Info"
        android:textColor="#33032F"
        android:textColorHint="#33032F"
        app:layout_constraintStart_toStartOf="@+id/editText5"
        app:layout_constraintTop_toBottomOf="@+id/editText5" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="329dp"
        android:layout_height="71dp"
        android:layout_marginTop="15dp"
        android:textColor="#33032F"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        android:textColorHint="#33032F"
        app:layout_constraintStart_toStartOf="@+id/editText6"
        app:layout_constraintTop_toBottomOf="@+id/editText6" />

    <EditText
        android:id="@+id/editTextTime"
        android:layout_width="330dp"
        android:layout_height="75dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:textColor="#33032F"
        android:hint="Time"
        android:textColorHint="#33032F"
        android:inputType="time"
        app:layout_constraintStart_toStartOf="@+id/editTextDate"
        app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="196dp"
        android:backgroundTint="#A0ACAD"
        android:text="Submit"
        android:textColor="#33032F"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>